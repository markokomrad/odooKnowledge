<odoo>
    <!-- Template for the login message (for users who are not logged in) -->
    <template id="login_message_template" name="Login Required">
        <t t-call="website.layout">
            <div class="container">
                <div class="content">
                    <h2>Login Required</h2>
                    <p>You must be logged in to access the documentation.</p>
                    <a href="/web/login" class="btn btn-primary">Login</a>
                </div>
            </div>
        </t>
    </template>
</odoo>